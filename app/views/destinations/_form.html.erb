<%= form_for([current_user, @destination], local: true) do |f| %>
    Name of Country:  <%= f.collection_select :country_id, Country.all, :id, :name, prompt: true %>
    Excursion: <%= f.text_field :excursion %>
    Time of visit: <%= f.text_field :time_of_visit %>
    best moment: <%= f.text_field :best_moment %>
    <%= f.submit %>
<% end %>