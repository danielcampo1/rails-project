<!DOCTYPE html>
<html>
  <head>
    <title>RailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
      <% if logged_in? %>
        <%= link_to "Logout", logout_path, method: "delete" %> <br>
        <%= link_to "Add destination", new_user_destination_path(current_user) %> <br>
        <%= link_to "General information from country", countries_path %>
      <% else %>
        <%= link_to "Sign in", signin_path %><br>
        <%= link_to "Sign up", new_user_path %><br>
        <%= link_to "Sign In W/ GITHUB", '/auth/github', method: :post %>

        <% end %>
    </nav>

  <div>
   <% if !!flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <%= e %> <br>
    <% end %>
  <% end %>
   </div>

  <body>
    <%= yield %>
  </body>
</html>
